{
  "type": "module",
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitest/ui": "^0.34.2",
    "eslint": "^8.47.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "nodemon --exec \"npm run start\" -e ts --watch src",
    "lint": "eslint . --ext .ts --cache --cache-location node_modules/.cache/.eslintcache",
    "format": "npm run lint -- --fix; prettier --cache --write --loglevel warn' .",
    "format-check": "prettier --cache --ignore-unknown --check '{,!(node_modules)/**/}*'",
    "test": "vitest --watch false",
    "test:open": "vitest --ui",
    "type": "tsc --noEmit",
    "unused": "npx -y ts-unused-exports tsconfig.json --ignoreFiles=.*config",
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -f -p tsconfig.build.json"
  }
}
